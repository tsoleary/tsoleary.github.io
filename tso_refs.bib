journal = {Proceedings of the National Academy of Sciences of the United States of America},
keywords = {Muscle activation,Muscle regulation,Structure-function,cMyBP-C},
number = {12},
pages = {3239--3244},
title = {{Phosphorylation and calcium antagonistically tune myosin-binding protein C's structure and function}},
volume = {113},
