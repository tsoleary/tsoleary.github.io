keywords = {Cycles,Evolution,Homoplasy,Influenza,Networks},
number = {1786},
title = {{A genotype network reveals homoplastic cycles of convergent evolution in influenza A (H3N2) haemagglutinin}},
volume = {281},
year = {2014}
}
@article{Helms2014,
