journal = {Journal of Experimental Marine Biology and Ecology},
keywords = {Heat stress,Invasive species,Mytilus galloprovincialis,Mytilus trossulus,Osmotic stress,Temperature adaptation},
number = {1-2},
pages = {167--174},
publisher = {Elsevier B.V.},
title = {{Invasive and native blue mussels (genus Mytilus) on the California coast: The role of physiology in a biological invasion}},
